@model VehicleManagement.Models.AddMakeModelClass

@{
    ViewData["Title"] = "AddMakeModel";
    if (TempData["error"] != null)
    {
        <p style="color: red; font-weight: bold">@TempData["error"]</p>
    }
    else if (TempData["saved"] != null)
    {
        <p style="color: limegreen; font-weight: bold">@TempData["saved"]</p>
    }
}

<h1>Add Make/Model</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMakeModel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Vehicles">Back to List</a>
</div>

