@model List<VehicleActionHistoryModel>
@{
    ViewData["Title"] = "VehicleActionHistory";
}

<h1>Vehicle Action History</h1>

    <table class="table" width="100%" id="dTable">
        <thead class="thead-dark">
            <tr>
                <th>Depot</th>
                <th>Vehicle Reg</th>
                <th>Make</th>
                <th>Model</th>
                <th>Vehicle Status</th>
                <th>Fleet or Rent</th>
                <th>Actions</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
    <tr>
            <td>@item.DepotName</td>
            <td>@item.VanRegistration.ToString()</td>
            <td>@item.Make</td>
            <td>@item.Model</td>
            <td>@item.VehicleStatus</td>
            <td>@item.FleetOrRent</td>
            <td>@Html.ActionLink("See History", "VehicleHistoryDetail", new { vehicleRegistration = item.VanRegistration })</td>
    </tr>
        }
    </table>
<script>
    $(document).ready(function () {
        $('#dTable').dataTable({
            "sortable": true
        });
    });
</script>